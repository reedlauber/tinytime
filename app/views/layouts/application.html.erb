<!DOCTYPE html>
<html>
<head>
	<title>TinyTime | Drive-by time-tracking</title>
	<%= include_stylesheets :all, :media => "all" %>
	<%= yield :css %>
	<%= csrf_meta_tag %>
</head>
<body>
	<div id="container">
		<header id="header" class="topbar">
			<div class="topbar-inner">
				<div class="container">
					<h3><a href="/">TinyTime<span>alpha</span></a></h3>
					<ul class="nav">
						<li<%=(' class=active' if @active_nav == "about")%>><a href="/about">About</a></li>
					</ul>
					<div class="tt-header-notice">Saving...</div>
				</div>
			</div>
		</header>
		<div id="content" class="container" data-username="<%=@username %>" data-slug="<%=@slug %>" data-token="<%=@token if @editable %>">
			<div id="content-inner" class="tt-shadow-big">
				<%= yield %>
			</div>
			<%= yield :after %>
		</div>
	</div>
	<%= include_javascripts :all %>
	<%= yield :js %>
</body>
</html>
