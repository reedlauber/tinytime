<% content_for :css do %>
	<%= include_stylesheets :all, :home, :media => "all" %>
<% end %>

<h2 id="title-label"><%=@title %></h2>

<div id="entries" class="tt-entries">
	<section class="tt-entry-group">
		<h2>Today</h2>
		<p>No entries added yet.</p>
	</section>
</div>

<% content_for :js do %>
	<%= include_javascripts :home %>
	<script>
		$(function() {
			var m = TinyTime.Manager({
				components: {
					entries: TinyTime.Entries()
				}
			}).init();
		});
	</script>
<% end %>